CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = clean oclean fclean


all : $(NAME)

$(NAME) : $(OBJ)
	$(CC) $^ -o $@

%.c : %.o
	$(CC) -c -o $< $@

clean : $(NAME)
	rm -rf *~ $<

oclean : $(OBJ)
	rm -rf $<

fclean : $(NAME) $(OBJ)
	rm -f *~ $^

re :
	rm -f $(OBJ)
	$(CC)    -c -o main.o main.c
	$(CC)    -c -o school.o school.c
	$(CC) $(OBJ) -o $(NAME)
