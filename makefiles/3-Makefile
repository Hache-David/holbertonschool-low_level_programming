CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f


all : $(NAME)

$(NAME) : $(OBJ)
	$(CC) $^ -o $@

%.c : %.o
	$(CC) -c -o $< $@

clean: $(NAME)
	$(RM) *~ $<

oclean: $(OBJ)
	$(RM) $<

fclean: $(NAME) $(OBJ)
	$(RM) *~ $^

re :
	$(RM) $(OBJ)
	$(CC)    -c -o main.o main.c
	$(CC)    -c -o school.o school.c
	$(CC) $(OBJ) -o $(NAME)
